include { HUMANN_MAIN } from './workflows/humann_main'

//
// WORKFLOW: Run main vedanta-nextflow/humann analysis pipeline
//
workflow VEDANTA_NEXTFLOW_HUMANN {
    HUMANN_MAIN ()
}

